{
  "GlobalConfiguration": {
    "BaseUrl": "https://localhost:4001"
  },
  "Routes": [
    {
      "UpstreamPathTemplate": "/gateway/api/{any}",
      "UpstreamHttpMethod": [ "Get", "Post", "Put", "Delete" ],
      "DownstreamPathTemplate": "/api/{any}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5270
        }
      ]
    },
