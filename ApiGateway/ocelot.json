    //  "DownstreamHostAndPorts": [
    //    {
    //      "Host": "localhost",
    //      "Port": 5270
    //    }
    //  ]
    //},
    {
      "UpstreamPathTemplate": "/gateway/connect",
      "UpstreamHttpMethod": [ "Post" ],
      "DownstreamPathTemplate": "/connect/token",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5000
        }
      ]
    }
  ]
}